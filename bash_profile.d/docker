# load docker env if docker-machine is present
if type -t docker-machine 2>&1 >/dev/null; then
  eval "$(docker-machine env default)"
fi

# TODO Handle the case where no dangling images are present
alias docker-gc-images="docker rmi \$(docker images -q --filter 'dangling=true')"

# http://stackoverflow.com/questions/17236796/how-to-remove-old-docker-containers#comment37420167_17237701
alias docker-gc-containers="docker ps -a | awk 'NR > 1 {print $1}' | xargs docker rm"
