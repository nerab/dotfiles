# Bootstraps a new machine with dotfiles from my github repository:
#
#   source <( curl -L https://raw.github.com/nerab/dotfiles/master/bootstrap )
# or
#   curl -L https://raw.github.com/nerab/dotfiles/master/bootstrap | bash
#
# TODO Shorten above URL
#
git clone http://github.com/nerab/dotfiles.git
cd dotfiles
mv $(find . -maxdepth 1 ! -name '.') .
cd ..
rmdir dotfiles
echo '*' >> .git/info/exclude
