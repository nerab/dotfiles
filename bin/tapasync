#!/bin/bash +x

#
# Sync Ruby Tapas eposides
#
# Subscribe at http://www.rubytapas.com/ and create an entry in ~/.netrc with
# the the chosen login and password:
#
# machine rubytapas.dpdcart.com
#   login me@example.com
#   password passw0rd
#
curl --netrc https://rubytapas.dpdcart.com/feed \
  | nokogiri -e '$_.xpath("//rss/channel/item/enclosure").each{|n| puts n["url"]}' \
  | xargs -P 8 -n 1 wget --continue --no-clobber
